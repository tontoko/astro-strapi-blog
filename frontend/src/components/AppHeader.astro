---
interface Props {
  blogTitle?: string
}
const { blogTitle } = Astro.props
---

<header
  class="h-16 w-full bg-emerald-700 text-white tracking-wider text-xl font-light flex items-center sticky top-0"
>
  <a href="/">
    <selection class="ml-8">
      <span>{blogTitle}</span>
    </selection>
  </a>
</header>
